sudo ip addr add 2001:6f8:608:fab::2/64 dev eth2
sudo ip link set nat64 up
sudo ip addr add 2001:6f8:608:ace::1/64 dev nat64
sudo ip addr add 192.168.100.1 dev nat64
sudo ip route add 192.168.100.0/24 dev nat64
sudo ip route add 2001:6f8:608:ace::/64 dev nat64
sudo iptables -t nat -A POSTROUTING -o eth2 -j MASQUERADE
sudo ip6tables -A OUTPUT -p icmpv6 --icmpv6-type destination-unreachable -j DROP
sudo sysctl -w net.ipv4.conf.all.forwarding=1
sudo sysctl -w net.ipv6.conf.all.forwarding=1
